---
import Layout from '../layouts/Layout.astro';

const metals = [
  { name: 'Bare Bright Copper', desc: 'The highest value scrap. Pure, uncoated copper wire.', highlight: true },
  { name: 'Yellow Brass', desc: 'Found in plumbing fixtures, keys, and valves.' },
  { name: 'Aluminum Wheels', desc: 'Clean alloy rims from passenger vehicles.' },
  { name: 'Structural Steel', desc: 'I-beams, channel, and heavy industrial plate.' },
  { name: 'Stainless Steel', desc: 'High-grade alloys from kitchens and industry.' },
  { name: 'Lead Acid Batteries', desc: 'Standard car, truck, and industrial batteries.' },
];

const faqs = [
  { q: 'Do I need to separate my metals?', a: 'Separation is key to the highest payout. While we accept mixed loads, they are graded at the lowest metal value present.' },
  { q: 'What identification is required?', a: 'Michigan law requires a valid state-issued photo ID for all scrap metal transactions. No exceptions.' },
  { q: 'Is free pickup available?', a: 'We offer free hauling for junk vehicles and large industrial loads within Jackson County.' },
  { q: 'How is pricing determined?', a: 'Prices fluctuate daily based on global market commodities. We use certified digital scales for precision.' },
];
---

<Layout 
  title="Scrap Metal Prices & Services | We Buy Your Junk LLC | Jackson, MI"
  description="Top prices for scrap metal in Jackson, Michigan. We buy copper, brass, aluminum, steel, radiators, catalytic converters, and more. Free pickup available."
>
  <!-- Page Header -->
  <section class="pt-48 pb-24 border-b border-warm-gray relative overflow-hidden">
    <!-- Vertical Detail -->
    <div class="absolute left-12 top-1/2 -translate-y-1/2 hidden xl:block origin-left -rotate-90">
      <p class="text-[10px] font-black uppercase tracking-[0.5em] text-primary/30 whitespace-nowrap">Scrap Metal & Commodities — Daily Market Tracking</p>
    </div>
    
    <div class="container relative z-10">
      <div class="grid lg:grid-cols-12 gap-12 items-end">
        <div class="lg:col-span-8">
          <div class="flex items-center gap-4 mb-6" data-animate="fade-up">
            <div class="w-12 h-px bg-primary/40"></div>
            <p class="text-primary text-xs tracking-[0.4em] uppercase font-bold">
              Current Market Rates
            </p>
          </div>
          <h1 class="display-title mb-0" data-animate="fade-up" data-delay="0.1">
            <span class="reveal-text block">Transparent</span>
            <span class="reveal-text block lg:pl-24 text-primary italic">Valuation</span>
          </h1>
        </div>
        <div class="lg:col-span-4 lg:text-right" data-animate="fade-left" data-delay="0.2">
          <p class="text-text-muted text-lg leading-relaxed max-w-sm ml-auto font-medium">
            Certified scales. Daily market tracking. Immediate payout. We ensure you get <span class="text-secondary font-bold">every cent</span> your scrap is worth.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Materials List - Controlled Asymmetry -->
  <section class="py-48 bg-cream relative overflow-hidden">
    <!-- Large Background Typography -->
    <div class="absolute right-0 top-24 opacity-[0.03] select-none pointer-events-none hidden lg:block">
      <p class="text-[20vw] font-black leading-none uppercase italic">Commodities</p>
    </div>

    <div class="container relative z-10">
      <div class="grid lg:grid-cols-12 gap-20 items-start">
        <!-- Sticky Sidebar Heading -->
        <div class="lg:col-span-4 sticky top-32" data-animate="fade-right">
          <p class="text-primary font-black text-[10px] tracking-[0.4em] uppercase mb-6">Inventory</p>
          <h2 class="text-5xl md:text-7xl font-display uppercase tracking-tighter leading-none mb-10">
            <span class="reveal-text block">What We</span>
            <span class="reveal-text block text-primary italic">Accept</span>
          </h2>
          <div class="w-20 h-1 bg-primary mb-10"></div>
          <p class="text-text-muted text-lg mb-12 max-w-xs leading-relaxed font-medium">
            We purchase all ferrous and non-ferrous metals. Our facility is equipped to handle everything from individual drop-offs to industrial containers.
          </p>
          <a href="/contact" class="pill-link">Get a current quote <span class="arrow">→</span></a>
        </div>

        <!-- Content List -->
        <div class="lg:col-span-8 grid md:grid-cols-2 gap-x-12 gap-y-16" data-stagger>
          {metals.map((metal, i) => (
            <div class="group border-l-2 border-warm-gray pl-8 py-2 hover:border-primary transition-colors duration-500 list-item-tactile">
              <p class="text-[10px] font-black text-primary tracking-[0.2em] uppercase mb-4">0{i+1}</p>
              <h3 class="text-3xl font-display uppercase mb-4 group-hover:translate-x-2 transition-transform duration-500 leading-none">
                {metal.name}
              </h3>
              <p class="text-text-muted leading-relaxed mb-6 font-medium">
                {metal.desc}
              </p>
              {metal.highlight && (
                <span class="inline-block bg-primary/10 text-primary text-[10px] font-black uppercase tracking-widest px-3 py-1 rounded-full">
                  High Demand
                </span>
              )}
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Junk Vehicle Removal - Breaking the Grid -->
  <section class="py-48 bg-secondary overflow-hidden text-white relative">
    <!-- Large Background Typography -->
    <div class="absolute left-0 bottom-24 opacity-[0.05] select-none pointer-events-none hidden lg:block">
      <p class="text-[20vw] font-black leading-none uppercase italic">Automotive</p>
    </div>

    <div class="container relative z-10">
      <div class="grid lg:grid-cols-12 gap-12 items-center">
        <!-- Offset Text -->
        <div class="lg:col-span-6 z-20" data-animate="fade-right">
          <h2 class="text-6xl md:text-8xl font-display uppercase tracking-tight leading-[0.85] mb-12">
            Junk Car <br/><span class="text-primary italic">Removal</span>
          </h2>
          <div class="lg:pl-24">
            <p class="text-white/80 text-xl leading-relaxed mb-12 font-medium">
              Don't let that old vehicle rust away. We buy cars, trucks, and SUVs in any condition. Running or not—we'll haul it and pay you cash on the spot.
            </p>
            
            <div class="grid grid-cols-2 gap-12 mb-16 border-t border-white/10 pt-12" data-stagger>
              <div>
                <p class="text-5xl font-display text-primary leading-none italic">FREE</p>
                <p class="text-[10px] font-black uppercase tracking-[0.3em] text-white/40 mt-4">Towing Service</p>
              </div>
              <div>
                <p class="text-5xl font-display text-primary leading-none italic">SAME</p>
                <p class="text-[10px] font-black uppercase tracking-[0.3em] text-white/40 mt-4">Day Payment</p>
              </div>
            </div>

            <a href="tel:+15175551234" class="group relative inline-flex items-center gap-4 bg-primary text-white px-12 py-6 rounded-full text-sm font-black tracking-widest uppercase transition-all hover:bg-white hover:text-secondary overflow-hidden">
              <span class="relative z-10">Schedule Pickup</span>
              <span class="relative z-10">→</span>
            </a>
          </div>
        </div>

        <!-- Overlapping Image Container -->
        <div class="lg:col-span-6 relative lg:overlap-left" data-animate="fade-left">
          <div class="img-hover-zoom aspect-[4/5] rounded-[3rem] bg-surface-dark overflow-hidden relative shadow-2xl border-8 border-white/10">
            <div class="absolute inset-0 bg-secondary/20 mix-blend-multiply"></div>
            <!-- Placeholder -->
            <div class="w-full h-full flex items-center justify-center text-white/5 font-black text-6xl italic uppercase text-center p-12">
              Vehicle Logistics
            </div>
          </div>
          <!-- Decorative breaking element -->
          <div class="absolute -bottom-12 -left-8 w-48 h-48 border-b-2 border-l-2 border-primary/30 rounded-bl-[4rem] hidden lg:block"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQs - Clean Grid -->
  <section class="py-40 bg-background">
    <div class="container">
      <div class="max-w-2xl mb-24" data-animate="fade-up">
        <h2 class="text-5xl font-display uppercase tracking-tighter leading-none mb-8">
          The <span class="text-primary">Details</span>
        </h2>
        <p class="text-text-muted text-lg">
          Common questions about selling scrap metal and junk vehicles at our Jackson yard.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-x-20 gap-y-16" data-stagger>
        {faqs.map((faq, i) => (
          <div class="group">
            <h3 class="text-2xl font-display uppercase mb-6 flex items-start gap-4">
              <span class="text-primary italic">Q.</span>
              <span class="group-hover:text-primary transition-colors duration-500">{faq.q}</span>
            </h3>
            <div class="pl-10">
              <p class="text-text-muted leading-relaxed pb-8 border-b border-warm-gray">
                {faq.a}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Simple Footer CTA -->
  <section class="py-24 bg-surface border-t border-warm-gray">
    <div class="container">
      <div class="flex flex-col md:flex-row items-center justify-between gap-12" data-animate="fade-up">
        <div>
          <h2 class="text-3xl font-display uppercase tracking-tight mb-2">Ready to sell?</h2>
          <p class="text-text-muted">No appointment needed. Just drive in.</p>
        </div>
        <div class="flex flex-wrap gap-6">
          <a href="/contact" class="pill-link">Find our location <span class="arrow">→</span></a>
          <a href="tel:+15175551234" class="pill-link bg-secondary text-white border-secondary hover:bg-primary">Call (517) 555-1234 <span class="arrow">→</span></a>
        </div>
      </div>
    </div>
  </section>
</Layout>
