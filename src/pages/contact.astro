---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="Contact Us | Location & Hours | We Buy Your Junk LLC | Jackson, MI"
  description="Visit We Buy Your Junk LLC in Jackson, Michigan. Get directions, hours, and contact info. Open Monday-Friday 8-5, Saturday 8-12. Call (517) 555-1234."
>
  <!-- Page Header - High Contrast Editorial -->
  <section class="pt-48 pb-24 border-b border-warm-gray bg-background relative overflow-hidden">
    <!-- Vertical Detail -->
    <div class="absolute left-12 top-1/2 -translate-y-1/2 hidden xl:block origin-left -rotate-90">
      <p class="text-[10px] font-black uppercase tracking-[0.5em] text-primary/30 whitespace-nowrap">Direct Communication — Industrial Logistics</p>
    </div>

    <div class="container relative z-10">
      <div class="grid lg:grid-cols-12 gap-12 items-end">
        <div class="lg:col-span-8">
          <div class="flex items-center gap-4 mb-6" data-animate="fade-up">
            <div class="w-12 h-px bg-primary/40"></div>
            <p class="text-primary text-xs tracking-[0.4em] uppercase font-bold">
              Jackson, Michigan — Get Paid
            </p>
          </div>
          <h1 class="display-title mb-0" data-animate="fade-up" data-delay="0.1">
            <span class="reveal-text block">Come</span>
            <span class="reveal-text block lg:pl-24 text-primary italic">See Us</span>
          </h1>
        </div>
        <div class="lg:col-span-4 lg:text-right" data-animate="fade-left" data-delay="0.2">
          <p class="text-text-muted text-lg leading-relaxed max-w-sm ml-auto font-medium">
            Right around the corner on Industrial Dr. No appointment needed—just <span class="text-secondary font-bold">drive in</span> anytime during business hours.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Grid - Asymmetric Layout -->
  <section class="py-48 bg-cream overflow-hidden relative">
    <!-- Large Background Typography -->
    <div class="absolute right-0 top-24 opacity-[0.03] select-none pointer-events-none hidden lg:block">
      <p class="text-[20vw] font-black leading-none uppercase italic">Connect</p>
    </div>

    <div class="container relative z-10">
      <div class="grid lg:grid-cols-12 gap-20 items-start">
        <!-- Info Side - Offset -->
        <div class="lg:col-span-5 space-y-16" data-animate="fade-right">
          <div>
            <p class="text-primary font-black text-[10px] tracking-[0.4em] uppercase mb-6">Inquiries</p>
            <h2 class="text-5xl md:text-7xl font-display uppercase tracking-tighter leading-none mb-12">
              The <br/><span class="text-primary italic">Information</span>
            </h2>
            
            <div class="space-y-8" data-stagger>
              <div class="group border-b border-warm-gray pb-8">
                <p class="text-primary font-black text-[10px] uppercase tracking-[0.2em] mb-4">Phone</p>
                <a href="tel:+15175551234" class="text-3xl font-display uppercase hover:text-primary transition-colors duration-500">(517) 555-1234</a>
              </div>
              
              <div class="group border-b border-warm-gray pb-8">
                <p class="text-primary font-black text-[10px] uppercase tracking-[0.2em] mb-4">Location</p>
                <address class="text-2xl font-display uppercase not-italic leading-tight">
                  123 Industrial Dr<br/>
                  Jackson, MI 49201
                </address>
              </div>

              <div class="group border-b border-warm-gray pb-8">
                <p class="text-primary font-black text-[10px] uppercase tracking-[0.2em] mb-4">Email</p>
                <a href="mailto:info@webuyyourjunk.net" class="text-xl font-bold text-secondary hover:text-primary transition-colors">info@webuyyourjunk.net</a>
              </div>
            </div>
          </div>

          <!-- Hours Box - Overlapping -->
          <div class="bg-secondary text-white p-12 rounded-[2.5rem] shadow-2xl relative z-10 lg:break-grid-right border border-white/5" data-animate="fade-up">
            <h3 class="text-primary font-display text-2xl uppercase tracking-widest mb-10 italic leading-none">Operation Hours</h3>
            <div class="space-y-6" data-stagger>
              <div class="flex justify-between border-b border-white/10 pb-4">
                <span class="text-white/40 text-xs font-bold uppercase tracking-widest">Mon – Fri</span>
                <span class="font-display text-white text-lg">8:00 AM – 5:00 PM</span>
              </div>
              <div class="flex justify-between border-b border-white/10 pb-4">
                <span class="text-white/40 text-xs font-bold uppercase tracking-widest">Saturday</span>
                <span class="font-display text-white text-lg">8:00 AM – 12:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span class="text-white/40 text-xs font-bold uppercase tracking-widest">Sunday</span>
                <span class="text-primary font-black uppercase italic text-lg">Closed</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Side - Modern High Contrast -->
        <div class="lg:col-span-7 lg:pl-12" data-animate="fade-left">
          <div class="bg-white rounded-[3rem] p-12 md:p-16 shadow-2xl relative border border-warm-gray/20">
            <p class="text-primary font-black text-[10px] tracking-[0.4em] uppercase mb-6">Direct Line</p>
            <h2 class="text-4xl md:text-5xl font-display uppercase tracking-tighter leading-none mb-6">
              Send a <span class="text-primary italic">Message</span>
            </h2>
            <p class="text-text-muted text-lg mb-12 font-medium leading-relaxed">
              Have a question or need a specific quote? We'll get back to you within 24 hours.
            </p>
            
            <form class="space-y-12">
              <div class="relative group">
                <label for="name" class="block text-[10px] font-black uppercase tracking-[0.2em] text-primary mb-2 transition-transform group-focus-within:-translate-y-1">Your Full Name</label>
                <input type="text" id="name" placeholder="John Doe" class="w-full bg-transparent border-b-2 border-warm-gray focus:border-primary px-0 py-4 font-display text-xl uppercase placeholder:text-warm-gray/40 focus:outline-none transition-all" />
              </div>
              
              <div class="grid md:grid-cols-2 gap-12">
                <div class="relative group">
                  <label for="email" class="block text-[10px] font-black uppercase tracking-[0.2em] text-primary mb-2 transition-transform group-focus-within:-translate-y-1">Email Address</label>
                  <input type="email" id="email" placeholder="john@email.com" class="w-full bg-transparent border-b-2 border-warm-gray focus:border-primary px-0 py-4 font-display text-xl uppercase placeholder:text-warm-gray/40 focus:outline-none transition-all" />
                </div>
                <div class="relative group">
                  <label for="phone" class="block text-[10px] font-black uppercase tracking-[0.2em] text-primary mb-2 transition-transform group-focus-within:-translate-y-1">Phone Number</label>
                  <input type="tel" id="phone" placeholder="(517) 000-0000" class="w-full bg-transparent border-b-2 border-warm-gray focus:border-primary px-0 py-4 font-display text-xl uppercase placeholder:text-warm-gray/40 focus:outline-none transition-all" />
                </div>
              </div>

              <div class="relative group">
                <label for="subject" class="block text-[10px] font-black uppercase tracking-[0.2em] text-primary mb-2 transition-transform group-focus-within:-translate-y-1">I'm interested in</label>
                <select id="subject" class="w-full bg-transparent border-b-2 border-warm-gray focus:border-primary px-0 py-4 font-display text-xl uppercase focus:outline-none transition-all appearance-none cursor-pointer">
                  <option>Scrap Metal Quote</option>
                  <option>Junk Car Pickup</option>
                  <option>Used Auto Parts</option>
                  <option>Other Question</option>
                </select>
                <div class="absolute right-0 bottom-4 pointer-events-none text-primary">↓</div>
              </div>

              <div class="relative group">
                <label for="message" class="block text-[10px] font-black uppercase tracking-[0.2em] text-primary mb-2 transition-transform group-focus-within:-translate-y-1">Your Message</label>
                <textarea id="message" rows="4" placeholder="How can we help you?" class="w-full bg-transparent border-b-2 border-warm-gray focus:border-primary px-0 py-4 font-display text-xl uppercase placeholder:text-warm-gray/40 focus:outline-none transition-all resize-none"></textarea>
              </div>

              <button type="submit" class="group relative inline-flex items-center gap-4 bg-secondary text-white px-12 py-6 rounded-full text-sm font-black tracking-widest uppercase transition-all hover:bg-primary overflow-hidden w-full justify-center">
                <span class="relative z-10">Send Message</span>
                <span class="relative z-10">→</span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section - Breaking the Grid -->
  <section class="py-40 bg-background overflow-hidden">
    <div class="container">
      <div class="relative" data-animate="fade-up">
        <div class="img-hover-zoom aspect-[21/9] rounded-[4rem] bg-surface-dark overflow-hidden shadow-2xl relative z-10">
          <div class="absolute inset-0 bg-secondary/20 mix-blend-multiply"></div>
          <!-- Map Placeholder -->
          <div class="w-full h-full flex items-center justify-center text-white/5 font-black text-6xl italic uppercase text-center p-12">
            Jackson, MI Yard Map
          </div>
        </div>
        <!-- Grid Breaking Accent -->
        <div class="absolute -top-12 -right-8 w-64 h-64 border-t-2 border-r-2 border-primary/30 rounded-tr-[5rem] hidden lg:block"></div>
        <div class="absolute -bottom-12 -left-8 w-64 h-64 border-b-2 border-l-2 border-primary/30 rounded-bl-[5rem] hidden lg:block"></div>
      </div>
    </div>
  </section>
</Layout>
