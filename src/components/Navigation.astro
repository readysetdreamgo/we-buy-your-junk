---
const navLinks = [
  { text: 'Home', href: '/' },
  { text: 'Scrap', href: '/scrap' },
  { text: 'Used Auto Parts', href: '/used-auto-parts' },
  { text: 'Insights', href: '/insights' },
  { text: 'About', href: '/about' },
  { text: 'Contact', href: '/contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="navbar-wrapper" id="navbar">
  <div class="container navbar-container">
    <a href="/" class="logo" data-magnetic="0.2">
      <span class="logo-text">We Buy Your Junk</span>
    </a>

    <nav class="nav-links">
      {navLinks.map(link => (
        <a 
          href={link.href} 
          class:list={["nav-link group", { active: currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)) }]}
          data-magnetic="0.1"
        >
          <span class="nav-link-text">{link.text}</span>
          <span class="absolute bottom-0 left-0 w-full h-px bg-primary scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left"></span>
        </a>
      ))}
    </nav>

    <div class="nav-actions">
      <a href="tel:+15175551234" class="nav-phone group" data-magnetic="0.2">
        <span class="text-primary font-black italic mr-2 group-hover:not-italic transition-all">Call</span>
        (517) 555-1234
      </a>
      
      <button class="mobile-toggle" id="mobile-toggle" aria-label="Toggle Menu">
        <div class="hamburger">
          <span></span>
          <span></span>
        </div>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="mobile-menu" id="mobile-menu">
    <nav class="mobile-nav">
      {navLinks.map(link => (
        <a 
          href={link.href} 
          class:list={["mobile-link", { active: currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)) }]}
        >
          {link.text}
        </a>
      ))}
      <a href="tel:+15175551234" class="mobile-phone font-display">Call (517) 555-1234</a>
    </nav>
  </div>
</header>

<style>
  .navbar-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 2.5rem 0;
    transition: all 0.6s cubic-bezier(0.19, 1, 0.22, 1);
    background: transparent;
  }

  .navbar-wrapper.scrolled {
    padding: 1.25rem 0;
    background: rgba(255, 255, 255, 0.98);
    border-bottom: 1px solid var(--color-warm-gray);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.03);
  }

  .navbar-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    text-decoration: none;
    color: var(--color-secondary);
    position: relative;
    z-index: 1001;
  }

  .logo-text {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .nav-links {
    display: none;
    gap: 3.5rem;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  @media (min-width: 1024px) {
    .nav-links {
      display: flex;
    }
  }

  .nav-link {
    text-decoration: none;
    color: var(--color-text-muted);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    transition: all 0.4s ease;
    position: relative;
    padding: 0.5rem 0;
  }

  .nav-link-text {
    position: relative;
    z-index: 1;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: var(--color-primary);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.4s cubic-bezier(0.19, 1, 0.22, 1);
  }

  .nav-link:hover {
    color: var(--color-secondary);
  }

  .nav-link:hover::after, .nav-link.active::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  .nav-link.active {
    color: var(--color-secondary);
  }

  .nav-actions {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav-phone {
    display: none;
    font-size: 0.8125rem;
    font-weight: 700;
    color: var(--color-secondary);
    text-decoration: none;
    letter-spacing: 0.05em;
    border: 1px solid var(--color-warm-gray);
    padding: 0.6rem 1.5rem;
    border-radius: 999px;
    transition: all 0.4s ease;
  }

  @media (min-width: 768px) {
    .nav-phone {
      display: block;
    }
  }

  .nav-phone:hover {
    background: var(--color-secondary);
    color: white;
    border-color: var(--color-secondary);
  }

  /* Mobile Toggle */
  .mobile-toggle {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    display: block;
    position: relative;
    z-index: 1001;
  }

  @media (min-width: 1024px) {
    .mobile-toggle {
      display: none;
    }
  }

  .hamburger {
    width: 28px;
    height: 10px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .hamburger span {
    display: block;
    width: 100%;
    height: 2px;
    background-color: var(--color-secondary);
    transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
  }

  .mobile-toggle.active .hamburger span:nth-child(1) {
    transform: translateY(4px) rotate(45deg);
  }

  .mobile-toggle.active .hamburger span:nth-child(2) {
    transform: translateY(-4px) rotate(-45deg);
  }

  /* Mobile Menu */
  .mobile-menu {
    position: fixed;
    inset: 0;
    width: 100%;
    height: 100vh;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-background);
    clip-path: circle(0% at top right);
    transition: clip-path 0.8s cubic-bezier(0.19, 1, 0.22, 1);
  }

  .mobile-menu.active {
    clip-path: circle(150% at top right);
  }

  .mobile-nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s 0.3s ease;
  }

  .mobile-menu.active .mobile-nav {
    opacity: 1;
    transform: translateY(0);
  }

  .mobile-link {
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 900;
    text-transform: uppercase;
    color: var(--color-secondary);
    text-decoration: none;
    transition: all 0.3s ease;
    letter-spacing: -0.02em;
  }

  .mobile-link:hover {
    color: var(--color-primary);
    transform: scale(1.05);
  }

  .mobile-phone {
    margin-top: 3rem;
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--color-primary);
    text-decoration: none;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }
</style>

<script>
  const mobileToggle = document.getElementById('mobile-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  const navbar = document.getElementById('navbar');

  mobileToggle?.addEventListener('click', () => {
    mobileToggle.classList.toggle('active');
    mobileMenu?.classList.toggle('active');
    document.body.classList.toggle('overflow-hidden');
  });

  // Close menu on link click
  const mobileLinks = document.querySelectorAll('.mobile-link');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileToggle?.classList.remove('active');
      mobileMenu?.classList.remove('active');
      document.body.classList.remove('overflow-hidden');
    });
  });

  // Handle scroll effect
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      navbar?.classList.add('scrolled');
    } else {
      navbar?.classList.remove('scrolled');
    }
  });
</script>
