---
const currentYear = new Date().getFullYear();

const services = [
  { text: 'Scrap Metal', href: '/scrap' },
  { text: 'Junk Cars', href: '/scrap#junk-cars' },
  { text: 'Used Auto Parts', href: '/used-auto-parts' },
];

const company = [
  { text: 'About Us', href: '/about' },
  { text: 'Contact', href: '/contact' },
];
---

<footer class="bg-secondary pt-32 pb-16 border-t border-white/5">
  <div class="container">
    <!-- Main Footer Grid -->
    <div class="grid lg:grid-cols-12 gap-16 mb-24">
      <!-- Brand -->
      <div class="lg:col-span-6">
        <a href="/" class="inline-block mb-10 group" data-magnetic="0.1">
          <span class="text-white font-display text-2xl font-black uppercase tracking-tight group-hover:text-primary transition-colors reveal-text">We Buy Your Junk</span>
        </a>
        <p class="text-white/90 text-lg leading-relaxed max-w-md mb-12 font-medium" data-animate="fade-up">
          Jackson's premier family-owned recycling center since 2008. We provide honest scales, fair value, and a commitment to our industrial community.
        </p>
        <div class="flex flex-col gap-4" data-animate="fade-up" data-delay="0.1">
          <p class="text-primary font-black text-[10px] uppercase tracking-[0.3em]">Direct Line</p>
          <a href="tel:+15175551234" class="text-3xl font-display text-white hover:text-primary transition-colors" data-magnetic="0.2">
            (517) 555-1234
          </a>
        </div>
      </div>
      
      <!-- Navigation Columns -->
      <div class="lg:col-span-6 grid grid-cols-2 md:grid-cols-3 gap-12">
        <div>
          <h4 class="text-white/40 text-[10px] font-black uppercase tracking-[0.2em] mb-8">Services</h4>
          <ul class="flex flex-col gap-4">
            {services.map((link) => (
              <li>
                <a href={link.href} class="text-white/90 hover:text-primary transition-colors text-sm font-bold uppercase tracking-widest">
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
        
        <div>
          <h4 class="text-white/40 text-[10px] font-black uppercase tracking-[0.2em] mb-8">Company</h4>
          <ul class="flex flex-col gap-4">
            {company.map((link) => (
              <li>
                <a href={link.href} class="text-white/90 hover:text-primary transition-colors text-sm font-bold uppercase tracking-widest">
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <div class="col-span-2 md:col-span-1">
          <h4 class="text-white/40 text-[10px] font-black uppercase tracking-[0.2em] mb-8">Location</h4>
          <p class="text-white/90 text-sm leading-relaxed uppercase tracking-widest font-medium">
            123 Industrial Dr<br/>
            Jackson, MI 49201
          </p>
          <p class="text-white/50 text-[10px] mt-4 italic font-bold">Junking for Jesus in Jackson</p>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-white/10 pt-12 flex flex-col md:flex-row justify-between items-center gap-8">
      <p class="text-white/40 text-[10px] font-black uppercase tracking-[0.3em]">
        &copy; {currentYear} We Buy Your Junk LLC. All Rights Reserved.
      </p>
      <div class="flex gap-12">
        <a href="#" class="text-white/40 hover:text-white/80 text-[10px] font-black uppercase tracking-[0.3em] transition-colors">Privacy Policy</a>
        <a href="#" class="text-white/40 hover:text-white/80 text-[10px] font-black uppercase tracking-[0.3em] transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
